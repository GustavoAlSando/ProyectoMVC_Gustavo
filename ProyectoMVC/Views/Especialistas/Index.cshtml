@model IEnumerable<Especialista>
@{
    ViewData["Title"] = "Listado de especialistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card-header">
        <h1>Especialistas Registradas</h1>
    </div>
    <div class="row">
        <a asp-controller="Especialistas" asp-action="Create" class="btn btn-primary mt-3">Registrar Especialista</a>
    </div>
    <!--Tabla Especialistas-->
    <div class="row mt-3">
        @if (Model != null && Model.Any())
        {
        <table class="table table-bordered table-striped text-center">
            <!--Encabezado de tabla Especialistas -->
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(m => m.IdEspecialista)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Funcionario)</th>
                    <th scope="col">@Html.DisplayNameFor(m => m.Especialidad)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <!--Cuerpo de la Tabla de Especialistas-->
            @{ var index = 1; }
            @foreach (var i in Model)
            {
                <tr class="m-3">
                    <td>@index</td>
                    <td>@i.IdEspecialista</td>
                    <td>@i.Funcionario</td>
                    <td>@i.Especialidad</td>
                    <td>
                        <a asp-controller="Especialistas" asp-action="Edit" asp-route-id="@i.IdEspecialista" class="btn btn-warning btn-sm">Modificar</a>
                    </td>
                    <td>
                        <a asp-controller="Especialistas" asp-action="Delete" asp-route-id="@i.IdEspecialista" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                    index++;
                </tr>
            }
        </table> }
        else
        {
            <div class="alert alert-warning text-center mt-4">
                <i class="bi bi-exclamation-triangle-fill"></i> No hay especialidades registradas
            </div>
        }
    </div>
</div>

