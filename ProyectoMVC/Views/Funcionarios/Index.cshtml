@model IEnumerable<Funcionario>

@{
    ViewData["Title"] = "Listado de Funcionarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card-header">
        <h1>Funcionarios Registrados</h1>
    </div>
    <div class="row">
        <a asp-controller="Funcionarios" asp-action="Create" class="btn btn-primary mt-3">Registrar Funcionarios</a>
    </div>
    <!--Tabla Funcionarios-->
    <div class="row mt-3">
        @if (Model != null && Model.Any())
        {
            <table class="table table-bordered table-striped text-center">
                <!--Encabezado de tabla Funcionarios -->
                <thead>
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdFuncionario)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Nombre)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Cedula)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Telefono)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Residencia)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Correo)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Puesto)</th>

                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <!--Cuerpo de la Tabla de Funcionarios-->
                @{ var index = 1; }
                @foreach (var i in Model)
                {
            <tr class="m-3">
                <td>@index</td>
                <td>@i.IdFuncionario</td>
                <td>@i.Nombre</td>
                <td>@i.Cedula</td>
                <td>@i.Telefono</td>
                <td>@i.Residencia</td>
                <td>@i.Correo</td>
                <td>@i.Puesto</td>

                <td>
                    <a asp-controller="Funcionarios" asp-action="Edit" asp-route-id="@i.IdFuncionario" class="btn btn-warning btn-sm">Modificar</a>
                </td>
                <td>
                    <a asp-controller="Funcionarios" asp-action="Delete" asp-route-id="@i.IdFuncionario" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
                index++;
            </tr>
                }
            </table> }
        else
        {
            <div class="alert alert-warning text-center mt-4">
                <i class="bi bi-exclamation-triangle-fill"></i> No hay funcionarios registrados
            </div>
        }
    </div>
</div>

